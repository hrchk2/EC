<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 mt-4'>
      <h2>会員情報編集</h2>
    <%= form_with model: @customer,url: customers_info_path(@customer), local:true do |f| %>
      <div class="form-group row">
        <%= f.label :氏名, class: "col-sm-4" %>
        <div class="form-inline">
        <%= f.text_field :last_name, class: "form-control col-sm-4" %>
        　　<%= f.text_field :first_name, class: "form-control col-sm-4" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :フリガナ, class: "col-sm-4" %>
        <div class="form-inline">
        <%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
        　　<%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :郵便番号, class: "col-sm-4" %>
        <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :住所, class: "col-sm-4" %>
        <%= f.text_field :address, class: "form-control col-sm-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :電話番号, class: "col-sm-4" %>
        <%= f.text_field :phone_number, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :メールアドレス, class: "col-sm-4" %>
        <%= f.email_field :email, class: "form-control col-sm-4" %>
      </div>

    <div class='col-md-10 mt-2 text-center'>
      <div class="actions">
        <%= f.submit "編集内容を保存", class: "btn btn-lg btn-success d-grid gap-2 col-4 mx-auto" %>
        <% end %>
        <%= link_to "退会する", customers_quit_path, class: "btn btn-lg btn-danger " %>
      </div>
    </div>
    </div>
  </div>
</div>