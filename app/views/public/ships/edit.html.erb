<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 mt-2'>
    <h2>配送先編集</h2>
    
    <%= form_with model: @ship, local:true do |f| %>
    <table class="table table-sm table-borderless mt-2">
      <tr>
        <td><%= f.label :postal_code, "郵便番号(ハイフンなし)",class: "col-sm-9" %></td>
        <td><%= f.text_field :postal_code, placeholder: "0000000", class:"form-control col-sm-4" %></td>
      </tr>

      <tr>
        <td><%= f.label :address,"住所", class: "col-sm-4" %></td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-sm-9" %></td>
      </tr>

      <tr>
        <td><%= f.label  :name, "宛名", class: "col-sm-4" %></td>
        <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control col-sm-4" %></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-m btn-success" %></td>
      </tr>
    </table>
    <% end %>
    </div>
  </div>
</div>
