<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 mt-2'>
    <h2>配送先登録一覧</h2>
    </div>
   <table class="table table-sm table-borderless">
    <%= form_with model: @shipnew, local:true do |f| %>
      <tr>
        <td><%= f.label :postal_code, "郵便番号(ハイフンなし)",class: "col-sm-9"  %></td>
        <td><%= f.text_field :postal_code, placeholder: "0000000", class:"form-control col-sm-4" %></td>
      </tr>

      <tr>
        <td><%= f.label :address,"住所", class: "col-sm-4" %></td>
        <td><%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", class: "form-control col-sm-9" %></td>
      </tr>

      <tr>
        <td><%= f.label :name, "宛名", class: "col-sm-4" %></td>
        <td><%= f.text_field :name, placeholder: "令和道子", class: "form-control col-sm-4" %></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-m btn-success" %></td>
      </tr>
    <% end %>
   </table>

    <div class='col-md-10 mt-3'>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @ships.each do |ship| %>
          <tr>
            <td><%= ship.postal_code %></td>
            <td><%= ship.address %></td>
            <td><%= ship.name %></td>
            <td>
              <%= link_to '編集する',edit_ship_path(ship), class: "btn btn-sm btn-success" %>
              <%= link_to '削除する',ship_path(ship) , method: :delete,data: {confirm: '本当に消しますか？'}, class: "btn btn-sm btn-danger" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>