<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-8 offset-md-1'>
      <h3>Sign up</h3>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
      <%= render "public/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <%= f.label :name, "氏名", class: "col-sm-4" %>
        <div class="form-inline">
        (姓)　<%= f.text_field :last_name, class: "form-control col-sm-4" %>
        (名)　<%= f.text_field :first_name, class: "form-control col-sm-4" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :name_kana, "フリガナ" , class: "col-sm-4" %>
        <div class="form-inline">
        (セイ)<%= f.text_field :last_name_kana, class: "form-control col-sm-4" %>
        (メイ)<%= f.text_field :first_name_kana, class: "form-control col-sm-4" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :postal_code, "郵便番号" , class: "col-sm-4" %>
        <%= f.text_field :postal_code, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :address, "住所", class: "col-sm-4" %>
        <%= f.text_field :address, class: "form-control col-sm-7" %>
      </div>

      <div class="form-group row">
        <%= f.label :phone_number , "電話番号" , class: "col-sm-4" %>
        <%= f.text_field :phone_number, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :email, "メールアドレス" , class: "col-sm-4" %>
        <%= f.email_field :email, class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <% if @minimum_password_length %>
            <%= f.label :"パスワード(#{ @minimum_password_length }文字以上)", class: "col-sm-4" %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control col-sm-4" %>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, "パスワード（確認用）" , class: "col-sm-4" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control col-sm-4" %>
      </div>

      <div class="actions row">
        <p class="col-sm-4"></p><br />
        <%= f.submit "新規登録", class:"btn btn-success col-sm-3" %>
      </div>
      <% end %>
      <h3 class="mt-4">既に登録済みの方</h3>
      <%= link_to "こちら", new_customer_session_path %>　からログインしてください。
    </div>
  </div>
</div>