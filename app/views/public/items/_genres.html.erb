<table class="genre-table table table-bordered table-hover shadow-sm" style="background: white;">
  <thead class="genre-thead">
    <tr>
      <th>ジャンル検索</th>
    </tr>
  </thead>
  <tbody>
    <% genres.each do |genre| %>
    <tr>
      <td><%= link_to genre.name, items_path(genre_id: genre.id), class: "text-dark" %></td>
    </tr>
    <% end %>
  </tbody>
</table>