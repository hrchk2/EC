<div class="container">
  <div class="row">
      <div class="col-2 mt-5 align-items-center">
        <%=render "genres", genres: @genres %>
      </div>
      
      <div class="col-9 mt-3">
        <h2><strong>商品一覧</strong>(全<%= @items.count %>件)</h2>
        <div class="row mx-auto pt-5 pb-5">
          <% @items.each do |item| %>
            <div class = "col-3">
              <%= link_to item_path(item), class: "text-center text-dark text-nowrap" do %>
                <%= image_tag item.get_image, size: "200x150" %><br>
                <%= item.name %><br>
              <% end %>
                ¥<%= item.price_add_tax.to_s(:delimited) %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>