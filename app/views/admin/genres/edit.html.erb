<div class="container">
  <div class="row">
    <div class="mx-auto">
      <div class="mb-3 p-2 bd-highlight">
        <h2 class="mb-4">ジャンル編集</h2>
        <%= form_with model: @genre, url: admin_genre_path, class: "row" do |f| %>
          <div class="col-auto">
            <h4><%= f.label :name, "ジャンル名" %></h4>
          </div>
          <div class="col-auto">
            <%= f.text_field :name, class: "form-control", size: "20" %>
          </div>
          <div class="col-auto">
            <%= f.submit "変更を保存", class: "btn btn-success" %>
          </div>
        <% end %>
    </div>
  </div>
</div>