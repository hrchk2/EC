<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-10 mt-2'>
    <h2>ジャンル一覧</h2>
    </div>
   <table class="table table-sm table-borderless">
    <%= form_with model: @genre,url: admin_genres_path, local: true do |f| %>
      <tr>
        <td><%= f.label :name, "ジャンル名", class: "col-sm-4" %></td>
        <td><%= f.text_field :name, placeholder: "ケーキ", class: "form-control col-sm-4" %></td>
        <td><%= f.submit "編集内容を保存", class: "btn btn-m btn-success" %></td>
      </tr
    <% end %>
   </table>

    <div class='col-md-10 mt-3'>
      <table class="table table-bordered">
        <thead class="bg-light">
          <tr>
            <th>ジャンル名</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td>
            <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>