<div class="container">
  <h3 class="ml-5 mb-4">商品詳細</h3>
  <div class="row shadow-lg">
    <div class="col-4 mt-5 mx-auto">
      <%= image_tag @item.get_image, size: "250x250" %>
    </div>
    <div class="col-8 mt-5 mx-auto">
      <%= flash[:notice] %>
      <table class="table table-borderless">
        <tr>
          <th>商品名</th>
          <td><%= @item.name %></td>
        </tr>
        <tr>
          <th>商品説明</th>
          <td><%= @item.introduction %></td>
        </tr>
        <tr>
          <th>ジャンル</th>
          <td><%= @item.genre.name %></td>
        </tr>
        <tr>
          <th>税込価格<br>(税抜価格)</th>
          <td><%= @item.price_add_tax.to_s(:delimited) %>(<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>
        <tr>
          <th>販売ステータス</th>
          <% if @item.is_active == true %>
          <td class="text-success font-weight-bold">販売中</td>
          <% else %>
          <td class="text-danger font-weight-bold">販売停止中</td>
          <% end %>
        </tr>
      </table>
      <div class="text-center">
        <%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success", style:"font-weight:bold; padding:10px 30px; margin-bottom : 10px;"  %>
      </div>
    </div>
  </div>
</div>