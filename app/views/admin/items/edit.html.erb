<div class="container">
  <h3>商品編集</h3>
  <div class="row">
    <div class="col-6 m-auto">
      <%= form_with model: @item, url: admin_item_path do |f|%>
        <table class="table table-borderless">
          <tr>
            <th><%= f.label :image, "商品画像" %></th>
            <td><%= f.file_field :image, class: "form-control-file image", accept: 'image/*' %></td>
          </tr>
          <tr>
            <th><%= f.label :name, "商品名" %></th>
            <td><%= f.text_field :name, class: "form-control name" %></td>
          </tr>
          <tr>
            <th><%= f.label :introduction, "商品説明" %></th>
            <td><%= f.text_area :introduction, class: "form-control introduction", style:"height:150px; resize:none;" %></td>
          </tr>
          <tr>
            <th><%= f.label :genre_id,"ジャンル" %></th>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--", class: "form-control genre" %></td>

          </tr>
          <tr>
            <th><%= f.label :price, "税抜価格" %></th>
            <td class="form-inline"><%= f.number_field :price, class: "form-control introduction" %> 円</td>
          </tr>
          <tr>
            <th>販売ステータス</th>
            <td><%= f.radio_button :is_active, true %>
            <%= f.label :is_active, "販売中", value: true %>
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, "販売停止中", value: false %>
            </td>
          </tr>
        </table>
        <div class="text-center">
          <%= f.submit "変更を保存する", class: "btn btn-success", style:"font-weight:bold; padding:10px 30px; " %>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>